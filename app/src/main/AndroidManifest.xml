<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mdb.project.mobilemirs">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".View.Activity.ItemActivity"></activity>
        <activity android:name=".View.Activity.HomeActivity"
            android:label="Home"/>
        <activity
            android:name=".View.Activity.ReportListActivity"
            android:label="Trouble Report List" />
        <activity
            android:name=".View.Activity.TroubleSheetActivity"
            android:label="Daily Trouble Sheet" />
        <activity
            android:name=".View.Activity.ProductionActivity"
            android:label="Daily Production" />
        <activity android:name=".View.Activity.LoginActivity" />
        <activity android:name=".View.Activity.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".View.Activity.CheckFuelTankActivity"
            android:label="Daily Check Fuel Tank" />
        <activity android:name=".View.Activity.DailyCheckDummy" />
        <activity
            android:name=".View.Activity.CheckSheetDummy"
            android:label="Daily Check Sheet" />
    </application>

</manifest>